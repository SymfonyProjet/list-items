{% extends "base.html.twig" %}

{% block title %}
    Utilisateurs
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="text-center my-5">Utilisateurs inscrits</h1>
		<table class="table">
			<tr class="thead-dark">
				<th>Photo</th>
				<th>Nom</th>
				<th>Age</th>
				<th>Sexe</th>
				<th>Rue</th>
				<th>Code postal</th>
				<th>Ville</th>
			</tr>
			{% for user in users %}
				<tr>
					<td><img src="{{ asset('images/users/' ~ user.nom ~ '.jpg') }}" alt="photo de profil"></td>
					<td>
						<a href="{{ path('show_user', { nom : user.nom|lower }) }}">{{ user.nom }}</a>
					</td>
					<td>{{ user.age }}</td>
					{% if user.sexe %}
						<td>Homme</td>
					{% else %}
						<td>Femme</td>
					{% endif %}
					<td>{{ user.adresse.rue }}</td>
					<td>{{ user.adresse.cp }}</td>
					<td>{{ user.adresse.ville }}</td>
				</tr>
			{% endfor %}
		</table>
	</div>
{% endblock %}
