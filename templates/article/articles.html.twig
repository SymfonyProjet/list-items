			<div class="col card my-5">
                <img src="{{ asset('images/articles/' ~ article.image ~ '.jpg') }}" alt="{{ article.image }}">
				<h2>
                    <a href="{{ path('show_article', {titre : article.titre|replace({"Ã©":"e", "'":"-", " ":"-"})|lower}) }}">{{ article.titre }}</a>    
